<a name="testimonials"></a>
  <div class="everything-testimonials">
    <h1>They already love us <img src="https://image.flaticon.com/icons/svg/214/214309.svg" class="testimonials-icon"></h1>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="5000">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= render 'shared/testimonials-slide1' %>
    </div>
    <div class="carousel-item">
      <%= render 'shared/testimonials-slide2' %>
    </div>
    <div class="carousel-item">
      <%= render 'shared/testimonials-slide3' %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>
</div>

