<div class='container-search'>
  <div class="image-search-bar">
    <%= form_tag search_path, method: :get do %>
      <%= text_field_tag :q,
        params[:q],
        class: "form-control",
        placeholder: "Find an image"
      %>
    <% end %>
  </div>
  <% if @image_results.any? %>
    <% @image_results.each do |url| %>
      <img src="<%= url %>" alt="" class="image-result">
    <% end %>
  <% else %>
    <h4>No results, search for something real :)</h4>
  <% end %>
