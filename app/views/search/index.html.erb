<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>

<section class='search-section'>
  <div class='text-center titles-with-yellow'>
    <h1>Search</h1>
  </div>
  <div class='container'>
    <div class='text-center search-bar'>
      <%= form_tag search_path, method: :get  do %>
        <div class="inner-addon right-addon">
          <i class="glyphicon glyphicon-search"></i>
          <%= text_field_tag :q, params[:q], class: 'form-control' %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @image_results.any? %>
    <div class='container'>
      <% @image_results.each do |url| %>
      <img src="<%= url %>" alt="">
      <% end %>
  <% else %>
    <h4>No results, search for something real :)</h4>
  <% end %>
</section>
